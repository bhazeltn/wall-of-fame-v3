<p style="color: green"><%= notice %></p>

<h1>Competitions</h1>

<div id="competitions">
  <% @competitions.in_groups_of(4, false).each do |group| %>
    <div class = "row" >
    <% group.each do |competition| %>
      <div class="col-md-3 col-lg-3">
        <%= render competition %>
        <p>
          <%= link_to "Show this competition", competition %>
        </p>
      </div>
    <% end %>
    </div>
  <% end %>

<%= link_to "New competition", new_competition_path %>
